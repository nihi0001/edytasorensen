---
import Layout from "../layouts/Layout.astro";
import Service from "../components/Service.astro";
import Instagram from "../components/Instagram.astro";


---

<Layout title="Oplevelsen hos Edyta Sørensen">

    <!-- banner img -->
    <div class="flex gap-2 justify-between items-center h-[300px]">
        <img src="/images/bannerpris.webp" alt="Banner Image 1" class="w-1/3 h-full object-cover" />
        <img src="/images/web_bag3.webp" alt="Banner Image 2" class="w-2/3 h-full object-cover" />
      </div>

      <!-- headline -->
      <section class="max-w-3xl mt-12 mb-10 px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl font-medium font-playfair uppercase mb-6 text-custom-black">
            Sådan fungerer det</h2>
        <div>
          <p class="text-sm mb-0 font-light font-oxygen text-custom-black leading-6 max-w-lg">
            Hos Edyta Sørensen er gennemsigtighed og god kommunikation essentielle elementer i hele processen. Jeg ønsker at skabe en klar og tryg oplevelse for dig, hvor vi sammen planlægger og realiserer dine ønsker fra start til slut.          
        </div>
      </section>


          <Service/>
          <Instagram/>
 
</Layout>
