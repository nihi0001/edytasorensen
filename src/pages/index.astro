---
import { getCollection } from "astro:content";
import { CldImage, CldVideoPlayer, CldUploadWidget } from 'astro-cloudinary';
import Layout from "../layouts/Layout.astro";
import MeetEdyta from "../components/MeetEdyta.astro";
import Anmeldelser from "../components/Anmeldelser.astro";

const images = (await getCollection('images')).slice(0, 4);



---

<Layout title="Home">
  <main class="relative">
    <!-- Banner med roterende baggrundsbilleder -->
    <div class="w-full mx-auto px-[20px] max-w-[1800px]">
      <section class="relative h-[700px] bg-cover bg-center animate-banner">
        <div class="absolute inset-x-0 bottom-12 left-0 flex px-8">
          <div class="text-white">
            <h1 class="text-[90px] uppercase font-bold font-old-standard">
              Edyta Sørensen
            </h1>
            <h2 class="text-4xl uppercase font-old-standard mt-[-30px]">
              Fotograf siden 1990
            </h2>
          </div>
        </div>
      </section>
    </div>

    <!-- forside -->

    <div>
      <div>
        <p>
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Perspiciatis
          et labore autem maxime praesentium incidunt quisquam at ea sapiente
          libero voluptatem, atque in delectus distinctio esse omnis iure
          exercitationem consectetur?
        </p>
      </div>

      <div class="grid grid-cols-3 gap-4">
        <img src="" alt="Image 1" class="w-72 h-72 object-cover" />
        <img src="" alt="Image 2" class="w-60 h-60 object-cover" />
        <img src="" alt="Image 3" class="w-48 h-48 object-cover" />
      </div>
    </div>

        <!-- 1. forsøg med cloudinary -->

    <ul class="grid grid-cols-4 gap-4 mb-12">
			{images.map(({ data: images }) => {
				return (
					<li>
						<CldImage
							src={images.public_id}
							width={900}
							height={900}
							crop="auto"
							alt="test"
							sizes="25vw"
						/>
					</li>
				)
			})}
		</ul>
    
    <!-- 2. forsøg med cloudinary / direkte copy fra github "max-programming. ændret i src og public id"  -->

    <CldImage
				src="ecommerce/edytasorensen"
				width={1200}
				height={630}
				crop={{
					width: 1200,
					height: 630,
					source: true,
					gravity: 'center',
					type: 'fill'
				}}
				effects={[
					{
						background: 'rgb:010A44'
					},
					{
						color: 'rgb:2A005F',
						colorize: '100'
					},
					{
						gradientFade: 'symmetric'
					}
				]}
				overlays={[
					{
						publicId: 'ZZZ_2424_kopia_sqo7v5',
						width: '1.0',
						height: '1.0',
						crop: 'fill',
						effects: [{
							opacity: 20
						}],
						flags: 'relative'
					},
					{
						width: 700,
						crop: 'fit',
						text: {
							alignment: 'center',
							color: 'white',
							fontFamily: 'Source Sans Pro',
							fontSize: 80,
							fontWeight: 'bold',
							text: 'Astro Cloudinary Examples',
							lineSpacing: -20
						},
						flags: ['relative']
					},
				]}
			/>
		</p>


    <MeetEdyta />
    <Anmeldelser />
  </main>

  <style>
    @keyframes bannerImageRotation {
      0% {
        background-image: url("");
      }
      33% {
        background-image: url("");
      }
      66% {
        background-image: url("");
      }
      100% {
        background-image: url("");
      }
    }

    .animate-banner {
      animation: bannerImageRotation 15s infinite ease-in-out;
    }
  </style>
</Layout>
