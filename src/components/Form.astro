---
---

  <main class="max-w-3xl mx-auto p-8 bg-white shadow-md rounded-md">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Kontakt mig</h1>
    <form action="#" method="POST" class="space-y-6">
      <!-- Navn -->
      <div>
        <label for="name" class="block text-sm font-medium text-gray-700">Navn</label>
        <input
          type="text"
          id="name"
          name="name"
          required
          class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500"
        />
      </div>

      <!-- E-mail -->
      <div>
        <label for="email" class="block text-sm font-medium text-gray-700">E-mail</label>
        <input
          type="email"
          id="email"
          name="email"
          required
          class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500"
        />
      </div>

      <!-- Radiobuttons til type fotografering -->
      <fieldset>
        <legend class="block text-sm font-medium text-gray-700">Vælg type fotografering</legend>
        <div class="mt-2 space-y-2">
          <div>
            <input
              type="radio"
              id="portrait"
              name="photographyType"
              value="Portræt"
              required
              class="h-4 w-4 text-blue-600 focus:ring-blue-500"
            />
            <label for="portrait" class="ml-2 text-sm text-gray-700">Portræt</label>
          </div>
          <div>
            <input
              type="radio"
              id="pregnancy"
              name="photographyType"
              value="Graviditet"
              class="h-4 w-4 text-blue-600 focus:ring-blue-500"
            />
            <label for="pregnancy" class="ml-2 text-sm text-gray-700">Graviditet</label>
          </div>
          <div>
            <input
              type="radio"
              id="family"
              name="photographyType"
              value="Familie"
              class="h-4 w-4 text-blue-600 focus:ring-blue-500"
            />
            <label for="family" class="ml-2 text-sm text-gray-700">Familie</label>
          </div>
          <div>
            <input
              type="radio"
              id="business"
              name="photographyType"
              value="Erhverv"
              class="h-4 w-4 text-blue-600 focus:ring-blue-500"
            />
            <label for="business" class="ml-2 text-sm text-gray-700">Erhverv</label>
          </div>
        </div>
      </fieldset>

      <!-- Kommentarer -->
      <div>
        <label for="comments" class="block text-sm font-medium text-gray-700">Ønsker, dato og tid</label>
        <textarea
          id="comments"
          name="comments"
          rows="4"
          class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500"
        ></textarea>
      </div>

      <!-- Submit-knap -->
      <div>
        <button
          type="submit"
          class="w-full py-2 px-4 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
        >
          Send forespørgsel
        </button>
      </div>
    </form>
  </main>
