<div class="max-w-6xl mx-auto p-8 grid grid-cols-1 md:grid-cols-[1fr_1fr] gap-8 items-start">
  <!-- Formular til venstre -->
  <main class="space-y-6">
    <h1 class="text-4xl text-custom-pink mb-6 font-playfair uppercase">Kontakt mig</h1>
    <form action="#" method="POST" class="space-y-6">
      <!-- Navn -->
      <div>
        <label for="name" class="block text-sm font-medium text-custom-brown">Navn</label>
        <input
          type="text"
          id="name"
          name="name"
          required
          class="mt-1 block w-full p-2 border border-gray-300 rounded focus:ring-blue-500 focus:border-blue-500"
        />
      </div>

      <!-- E-mail -->
      <div>
        <label for="email" class="block text-sm font-medium text-custom-brown">E-mail</label>
        <input
          type="email"
          id="email"
          name="email"
          required
          class="mt-1 block w-full p-2 border border-gray-300 rounded focus:ring-blue-500 focus:border-blue-500"
        />
      </div>

      <!-- Radiobuttons til type fotografering -->
      <fieldset>
        <legend class="block text-sm font-medium text-custom-brown">Vælg type fotografering</legend>
        <div class="mt-2 space-y-2">
          <div>
            <input
              type="radio"
              id="portrait"
              name="photographyType"
              value="Portræt"
              required
              class="h-4 w-4 text-blue-600 focus:ring-blue-500"
            />
            <label for="portrait" class="ml-2 text-sm text-custom-brown">Portræt</label>
          </div>
          <div>
            <input
              type="radio"
              id="pregnancy"
              name="photographyType"
              value="Graviditet"
              class="h-4 w-4 text-blue-600 focus:ring-blue-500"
            />
            <label for="pregnancy" class="ml-2 text-sm text-custom-brown">Graviditet</label>
          </div>
          <div>
            <input
              type="radio"
              id="family"
              name="photographyType"
              value="Familie"
              class="h-4 w-4 text-blue-600 focus:ring-blue-500"
            />
            <label for="family" class="ml-2 text-sm text-custom-brown">Familie</label>
          </div>
          <div>
            <input
              type="radio"
              id="business"
              name="photographyType"
              value="Erhverv"
              class="h-4 w-4 text-blue-600 focus:ring-blue-500"
            />
            <label for="business" class="ml-2 text-sm text-custom-brown">Erhverv</label>
          </div>
        </div>
      </fieldset>

      <!-- Kommentarer -->
      <div>
        <label for="comments" class="block text-sm font-medium text-custom-brown">Ønsker, dato og tid</label>
        <textarea
          id="comments"
          name="comments"
          rows="4"
          class="mt-1 block w-full p-2 border border-gray-300 rounded focus:ring-blue-500 focus:border-blue-500"
        ></textarea>
      </div>

      <!-- Submit-knap -->
      <div>
        <button
          type="submit"
          class="w-full py-2 px-4 bg-custom-brown text-white font-medium rounded-md  hover:bg-transparent hover:border-[1px] hover:text-custom-brown hover:border-custom-brown"
        >
          Send forespørgsel
        </button>
      </div>
    </form>
  </main>

  <!-- Billede til højre -->
  <div class="hidden md:block">
    <img
      src=""
      alt=""
      class="w-full h-auto object-cover"
    />
  </div>
</div>
