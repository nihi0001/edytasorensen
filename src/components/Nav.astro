<nav class="text-custom-black p-4 font-playfair font-light relative">
  <!-- Logo og menu-wrapper -->
  <div class="flex justify-between items-center h-14 relative z-50">
    <!-- Logo -->
    <a href="/" class="h-8 md:block flex items-center font-playfair font-medium uppercase text-xl text-custom-black">
      Edyta Sørensen
    </a>

    <!-- Burger-menu knap -->
    <button
      class="md:hidden flex items-center focus:outline-none"
      id="burgerMenu"
      aria-label="Åbn menu"
    >
      <div class="space-y-1">
        <div class="w-6 h-0.5 bg-custom-black"></div>
        <div class="w-6 h-0.5 bg-custom-black"></div>
        <div class="w-6 h-0.5 bg-custom-black"></div>
      </div>
    </button>

    <!-- Navigation Links (desktop) -->
    <ul class="hidden md:flex md:space-x-8">
      <li><a href="/fotografering" class="hover:underline">Galleri</a></li>
      <li><a href="/priser" class="hover:underline">Priser</a></li>
      <li><a href="/booking" class="hover:underline">Kontakt</a></li>
    </ul>
  </div>

  <!-- Mobil-menu -->
  <div class="md:hidden">
    <!-- Luk-knap / kryds -->
    <button
      class="absolute top-4 right-2 w-12 h-12 flex items-center justify-center text-custom-black text-5xl hidden z-50"
      id="closeMenu"
      aria-label="Luk menu"

    >
      &times;
    </button>  

    <!-- Menu -->
    <ul
      class="hidden fixed inset-0 flex flex-col justify-center items-center text-custom-black bg-custom-bg py-8 space-y-6 z-40 transform translate-y-full transition-transform duration-300"
      id="mobileMenu"
    >
      <li><a href="/fotografering" class="hover:underline block text-lg">Galleri</a></li>
      <li><a href="/priser" class="hover:underline block text-lg">Priser</a></li>
      <li><a href="/booking" class="hover:underline block text-lg">Kontakt</a></li>
    </ul>
  </div>
</nav>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const burgerMenu = document.getElementById('burgerMenu');
    const closeMenu = document.getElementById('closeMenu');
    const mobileMenu = document.getElementById('mobileMenu');
    const mobileLogo = document.getElementById('mobileLogo');

    // Åbn menu
    burgerMenu.addEventListener('click', function () {
      mobileMenu.classList.remove('hidden', 'translate-y-full'); // Vis menu
      mobileMenu.classList.add('translate-y-0'); // Åbn menu animation
      burgerMenu.classList.add('hidden'); // Skjul burgermenu
      closeMenu.classList.remove('hidden'); // Vis kryds
      mobileLogo.classList.remove('hidden'); // Vis logo i mobilmenu
    });

    // Luk menu
    closeMenu.addEventListener('click', function () {
      mobileMenu.classList.add('translate-y-full'); // Skjul menu animation
      setTimeout(() => mobileMenu.classList.add('hidden'), 300); // Skjul menu efter animation
      closeMenu.classList.add('hidden'); // Skjul kryds
      burgerMenu.classList.remove('hidden'); // Vis burgermenu
      mobileLogo.classList.add('hidden'); // Skjul logo i mobilmenu
    });

    // Kryds er skjult i desktop
    closeMenu.classList.add('hidden');
  });
</script>
